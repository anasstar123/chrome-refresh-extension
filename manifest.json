{
  "manifest_version": 3,
  "name": "Auto Refresh Extension",
  "version": "1.1",
  "description": "Autorafraîchit les pages avec option d’arrêt après N passages.",
  "permissions": ["tabs", "storage", "alarms"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
