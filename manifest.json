{
  "manifest_version": 3,
  "name": "Auto Refresh Extension",
  "version": "1.0",
  "description": "A simple extension to auto-refresh web pages.",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
